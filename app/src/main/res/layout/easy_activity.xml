<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".easyActivity"
    android:id="@+id/easy_activity" >

    <TextView
        android:id="@+id/easytxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chosen Level: Easy!"
        app:layout_constraintBottom_toTopOf="@id/easyScoretxtView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/easyScoretxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Score: "
        app:layout_constraintBottom_toTopOf="@id/easyLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/easytxtView" />

    <GridLayout
        android:id="@+id/easyLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        tools:context=".easyActivity" >

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>